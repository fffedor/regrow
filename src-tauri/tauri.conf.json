{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ReGrow",
  "version": "0.1.0",
  "identifier": "com.regrow.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "TAURI_ENV=1 npm run dev",
    "beforeBuildCommand": "TAURI_ENV=1 npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ReGrow",
        "width": 420,
        "height": 750,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
